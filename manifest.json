{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.9.0",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": "images/icon-48.png"
  },
  "permissions": [
    "tabs",
    "favicon",
    "storage",
    "activeTab"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "_favicon/*",
        "manifest.json",
        "html/about.html",
        "html/settings.html",
        "js/about.js",
        "js/settings.js",
        "js/i18n.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "extension_ids": [
        "*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      }
    },
    "switch-to-previous-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "__MSG_prevTabDesc__"
    },
    "open-pinned-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "__MSG_pinnedTabsDesc__"
    }
  }
}
