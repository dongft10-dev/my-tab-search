{
  "manifest_version": 3,
  "name": "My Tab Search Extension",
  "version": "2.0.0",
  "description": "Search through opened tabs",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon-48.png"
  },
  "permissions": [
    "tabs",
    "favicon",
    "storage",
    "activeTab",
    "notifications",
    "alarms",
    "scripting"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "_favicon/*",
        "images/magnifying-glass.png",
        "images/icon-16.png",
        "images/icon-32.png",
        "images/icon-48.png",
        "images/icon-128.png"
      ],
      "matches": [
        "<all_urls>"
      ],
      "extension_ids": [
        "*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      }
    },
    "switch-to-previous-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "切换到前一个已激活的标签页"
    }
  }
}
